<CalcButton@Button>:
	the_root: self.parent.my_root
	on_press: self.the_root._doit(self.text)
	background_normal: ''
	background_color: 0.1, 0.2, 0.9, 1
	font_size: self.width/4

<CalcSpcButton@Button>:
	the_root: self.parent.mytwo_root
	on_press: self.the_root._changelab(self.text)
	background_normal: ''
	background_color: 1, 1, 1, 1
	color: 0, 0, 0, 1
	
<calculator>:
	labtext: label
	sinlab: sin
	coslab: cos
	tanlab: tan
	anglelab: angle
	dellab: delete
	BoxLayout:
		size: root.width, root.height
		orientation: "vertical"
		GridLayout:
			cols: 3
			rows: 1
			size_hint_y: None
			height: root.height/12
			mytwo_root: root
			CalcSpcButton:
				text: "INV"
			CalcSpcButton:
				id: angle
				text: "DEG"
			CalcSpcButton:
				id: delete
				text: "DEL"
		Label:
			id: label
			text: ""
			color: 0,0,0,1
			font_size: self.width/10
			text_size: self.width, None
			valign: 'top'
			halign: 'right'
			canvas.before:
				Color:
					rgba: 1,1,1,1
				Rectangle:
					pos: self.pos
					size: self.size
		BoxLayout:
			orientation: "horizontal"
			size_hint_y: None
			height: root.height/1.75
			GridLayout:
				cols: 4
				my_root: root
				CalcButton:
					text: "sqrt "
				CalcButton:
					text: " log "
				CalcButton:
					text: " ln "
				CalcButton:
					text: " pi "
				CalcButton:
					id: sin
					text: " sin "
				CalcButton:
					id: cos
					text: " cos "
				CalcButton:
					id: tan
					text: " tan "
				CalcButton:
					text: " e^ "
				CalcButton:
					text: " ( "
				CalcButton:
					text: " ) "
				CalcButton:
					text: " !"
				CalcButton:
					text: " ^ "
				CalcButton:
					text: "7"
				CalcButton:
					text: "8"
				CalcButton:
					text: "9"
				CalcButton:
					text: " + "
				CalcButton:
					text: "4"
				CalcButton:
					text: "5"
				CalcButton:
					text: "6"
				CalcButton:
					text: " - "
				CalcButton:
					text: "1"
				CalcButton:
					text: "2"
				CalcButton:
					text: "3"
				CalcButton:
					text: " * "
				CalcButton:
					text: "."
				CalcButton:
					text: "0"
				CalcButton:
					text: "="
				CalcButton:
					text: " / "
				
